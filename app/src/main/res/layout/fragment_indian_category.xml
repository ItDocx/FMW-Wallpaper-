<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBar_clr"
    tools:context=".Fragments.IndianCategory">

    <androidx.recyclerview.widget.RecyclerView

        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/wallpaper_items"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/ic_scroll"
        android:id="@+id/indianRecycler"/>

    <ProgressBar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:indeterminate="true"
        android:indeterminateTint="@color/appBar_clr"
        android:background="@drawable/progress_bg"
        android:layout_gravity="center"
        android:id="@+id/indianProgress"
        />

</FrameLayout>