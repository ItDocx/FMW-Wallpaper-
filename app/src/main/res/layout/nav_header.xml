<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBar_clr">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_profile_circle"
        android:id="@+id/userimage"
        android:elevation="@dimen/_5sdp"
        app:civ_shadow_color="@color/white"
        app:civ_circle_color="@color/white"
        app:civ_shadow_radius="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userimage"
        android:text="Hi! \nWelcome to Female Models Wallpapers"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:id="@+id/welcome_note"/>

</androidx.constraintlayout.widget.ConstraintLayout>